{
  "compilerOptions": {
    "baseUrl": ".",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "Node16",
    "skipLibCheck": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["es2017"],
    "types": ["@citizenfx/client", "@types/node"],
    "paths": {
      "@core/*": ["./core/*"],
      "@lib": ["./lib"]
    },
    "moduleResolution": "node"
  },
  "include": ["./**/*"]
}
