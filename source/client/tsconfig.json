{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "incremental": true,
    "skipLibCheck": false,
    "types": ["@types/node", "@citizenfx/client"],
    "paths": {
      "@core": ["./app/core"]
    }
  },
  "include": ["./**/*"]
}
