{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "lib": ["ESNext", "DOM"],
    "types": ["@types/node", "@citizenfx/client"],
    "jsx": "react",
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
